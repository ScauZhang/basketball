<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.administrator.myapplication.Communicate">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:background="#FF006666"
        android:layout_height="50dp">
        <ImageButton
            android:contentDescription="@string/abc_action_bar_home_description"
            android:id="@+id/back"
            android:layout_width="50dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/link_press"
            android:src="@drawable/back"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="子龙运动场"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:layout_height="fill_parent"/>
        <Button
            android:id="@+id/share"
            android:layout_width="60dp"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:text="留言"
            android:background="@drawable/link_press"
            android:layout_height="50dp" />

    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_swipe_ly"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ListView
                android:id="@+id/lv_communicate"
                android:layout_width="fill_parent"
                android:divider="@drawable/divider_color"
                android:layout_marginTop="55dp"
                android:listSelector="@android:color/transparent"
                android:cacheColorHint="@android:color/transparent"
                android:footerDividersEnabled="true"
                android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:scrollbars="none"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="10000dp"
                    android:layout_marginTop="5dp"
                    android:divider="@drawable/divider_color1"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="60dp"
                        android:layout_gravity="center_vertical"
                        android:text="1号场"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_style2"
                        android:layout_height="40dp" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_gravity="center_vertical"
                        android:text="1号场"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_style2"
                        android:layout_height="40dp" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_gravity="center_vertical"
                        android:text="1号场"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_style2"
                        android:layout_height="40dp" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_gravity="center_vertical"
                        android:text="1号场"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_style2"
                        android:layout_height="40dp" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_gravity="center_vertical"
                        android:text="1号场"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_style2"
                        android:layout_height="40dp" />
                    <Button
                        android:layout_width="60dp"
                        android:layout_gravity="center_vertical"
                        android:text="1号场"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_style2"
                        android:layout_height="40dp" />

                </LinearLayout>

            </HorizontalScrollView>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
